{
  "name": "ai-narration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:frontend\"",
    "dev:api": "nodemon --exec ts-node apps/api/src/index.ts",
    "dev:worker": "nodemon --exec ts-node apps/worker/src/index.ts",
    "dev:frontend": "vite apps/frontend --port 3000",
    "build": "npm run build:api && npm run build:worker && npm run build:frontend",
    "build:api": "tsc --outDir dist/api --rootDir apps/api/src apps/api/src/index.ts",
    "build:worker": "tsc --outDir dist/worker --rootDir apps/worker/src apps/worker/src/index.ts",
    "build:frontend": "vite build apps/frontend --outDir ../../dist/frontend"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.0.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "elevenlabs-node": "^1.0.0",
    "express": "^4.21.2",
    "ffmpeg-static": "^5.0.0",
    "multer": "^2.0.2",
    "openai": "^4.104.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2"
  }
}
