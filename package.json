{
  "name": "ai-narration",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "nodemon apps/api/src/index.ts",
    "dev:frontend": "vite apps/frontend --port 3000",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "tsc --project tsconfig.api.json",
    "build:frontend": "vite build --config vite.config.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "start:api": "node dist/api/apps/api/src/index.js",
    "start:frontend": "vite preview --config vite.config.ts --port 3000"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.45.0",
    "@clerk/express": "^1.7.26",
    "@elevenlabs/elevenlabs-js": "^2.11.0",
    "@google-cloud/text-to-speech": "^5.0.0",
    "axios": "^1.11.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "elevenlabs-node": "^1.0.0",
    "express": "^4.21.2",
    "ffmpeg-static": "^5.0.0",
    "mongodb": "^6.19.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.104.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "stripe": "^18.5.0",
    "svix": "^1.75.0"

  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.0",
    "serve": "^14.2.1",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.0.1"
  }
}
