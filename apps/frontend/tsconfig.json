{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",  // ✅ Override just the module system
    "moduleResolution": "bundler",  // ✅ Better for Vite
    "types": ["vite/client"],  // ✅ Add Vite types
    "allowImportingTsExtensions": false,
    "noEmit": true  // ✅ Let Vite handle the build
  },
  "include": [
    "src/**/*",
    "src/**/*.tsx", 
    "src/**/*.ts"
  ]
}