{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/api",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "apps/api/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "apps/frontend/**/*",
    "tests/**/*"
  ]
}
